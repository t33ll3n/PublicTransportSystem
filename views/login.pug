html
  head
    title Login - Public Transport System
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='css/main.css')
  body
    .login-page
      .form
        h1 Public Transport System
        p= message
        form.register-form(method='post', action='register')
          input(type='text', placeholder='name', name='username')
          input(type='password', placeholder='password', name='password')
          input(type='text', placeholder='email address', name='email')
          button create
          p.message
            | Already registered? 
            a(href='#') Sign In
        form.login-form(method='post', action='login')
          input#username(type='text', placeholder='username', name='username')
          input#pass(type='password', placeholder='password', name="password")
          button login
          p.message
            | Not registered? 
            a(href='#') Create an account
    script(src='vendor/jquery/jquery-3.2.1.min.js')
    script(src='js/main.js')