  body
    .limiter
      .container-login100
        .wrap-login100
          form.login100-form.validate-form(method='post', action='register')
            span.login100-form-title.p-b-26
              | Public Transport System
            span.login100-form-title.p-b-48
              i.fa.fa-bus
            .wrap-input100
              input.input100(type='text', name='username' autocomplete='off')
              span.focus-input100(data-placeholder='username')
            .wrap-input100.validate-input(data-validate='Enter password')
              span.btn-show-pass
                i.fa.fa-eye
              input.input100(type='password', name='password')
              span.focus-input100(data-placeholder='Password')
            .wrap-input100.validate-input(data-validate='Valid email is: a@b.c')
              input.input100(type='text', name='email' autocomplete='off')
              span.focus-input100(data-placeholder='email')
            .container-login100-form-btn
              .wrap-login100-form-btn
                .login100-form-bgbtn
                button.login100-form-btn
                  | Register
            .text-center.p-t-115
              span.txt1
                | Already have an account?
              a.txt2(href='/login')
                |  Log In
